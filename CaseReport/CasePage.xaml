<Page x:Class="CaseReport.CasePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
	Title="CasePage" Height="100" Width="200">
    <Border Margin="0,0,0,0" Grid.Row="1"  Background="#FFFFFF" BorderBrush="{x:Null}"  BorderThickness="1" CornerRadius="3,3,3,3" Height="99" Width="199">
        <Grid Margin="0,0,0,0"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="98" Width="198" Background="#8B8386" >
            <Label x:Name="lb_name" Content="" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Foreground="#FFFFFF"/>
            <Button x:Name="btn_change" Content="修改" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Width="75" Click="btn_change_Click"/>
            <Button x:Name="btn_upload" Content="上传图片" HorizontalAlignment="Right" Margin="0,56,10,0" VerticalAlignment="Top" Width="75" Click="btn_upload_Click"/>
        </Grid>
    </Border>
</Page>
